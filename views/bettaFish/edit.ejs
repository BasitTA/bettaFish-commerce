<%include ../partials/header%>
<div class="container">
    <header style="text-align:center;">
        <h2>Edit <%=bettaFish.name%></h2>
    </header>
    <div class="row">
        <div style="width:30%; margin: 25px auto;">
            <form action="/bettaFish/<%=bettaFish._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="bettaFish[name]" value="<%=bettaFish.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="bettaFish[color]" value="<%=bettaFish.color%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="bettaFish[image]" value="<%=bettaFish.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="bettaFish[description]" value="<%=bettaFish.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/bettaFish">View Betta Fish Page</a>
        </div>
    </div>
<%include ../partials/footer%>
</div>