<%include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Betta Fish</p>
            <div class="list-group">
                <li class="list-group-item active">list 1</li>
                <li class="list-group-item">list 2</li>
                <li class="list-group-item">list 3</li>
                <li class="list-group-item">list 4</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=bettaFish.image%>">
                
                <div class="caption">
                    <span><a href="#"><strong><%=bettaFish.name%></strong> - <%=bettaFish.color%></a></span>
                    <span class="pull-right">$50</span>
                    <p><%=bettaFish.description%></p>
                    <p>Submitted by <em><strong><%=bettaFish.author.username%></strong></em></p>
                    <%if(currentUser && bettaFish.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-xs btn-warning" href="/bettaFish/<%=bettaFish._id%>/edit">Edit</a>
                        <form class="display-inline " action="/bettaFish/<%=bettaFish._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    <%}%>
                </div>
            </div>
            <div class="well">
                <a class="btn btn-sm btn-success pull-right" href="/bettaFish/<%=bettaFish._id%>/comment/new">Add New Comment!</a>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <%bettaFish.comments.forEach(function(comment){%>
                            <p>
                                <strong><%=comment.author.username%></strong>
                                <span class="pull-right">2 days ago</span>
                            </P>
                            <P><%=comment.text%></p>
                            <a class="btn btn-xs btn-warning" href="/bettaFish/<%=bettaFish._id%>/comment/<%=comment._id%>/edit">
                                Edit
                            </a>
                        <% })%>
                    </div>
                </div>
            </div>
        </div>
    </div>
<%include ../partials/footer%>
</div>
